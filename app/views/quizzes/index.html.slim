.row
  .col-lg-6
    h1 Listing quizzes
    br

    table.table
      thead
        tr
          th id
          th Image
          th Title
          th Text
          th Questions
          th
          th
          th

      tbody
        - @quizzes.each do |quiz|
          tr
            td = quiz.id
            td = image_tag quiz.img.url, height: "100", width: "100"
            td = quiz.title
            td = quiz.text
            td
              - quiz.qs.each do |q|
                ul
                  li=q.title
            td
              = link_to 'Show', quiz
            td
              = link_to 'Edit', edit_quiz_path(quiz)
            td
              = link_to 'Destroy', quiz, data: {:confirm => 'Are you sure?'}, :method => :delete
      br

    .row
      = link_to 'New Quiz', new_quiz_path, class: 'btn btn-lg btn-block btn-info'
      br/
      = link_to 'All quizzes', root_path, class: 'btn btn-lg btn-block btn-info'
